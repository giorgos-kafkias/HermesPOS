<Window x:Class="HermesPOS.Views.AddProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Προσθήκη Νέου Προϊόντος"
        Width="560" Height="540"
        MinWidth="520" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FAFAFA">

    <!-- Γενικά στυλ για μεγαλύτερα controls -->
    <Window.Resources>
        <Style TargetType="Control">
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Κουμπιά: Primary/Secondary (flat, τετράγωνα) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0063B1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004F8A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D5D5D5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C7C7C7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Φόρμα: 2 στήλες (Label / Input) -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Barcode -->
                <RowDefinition Height="Auto"/>
                <!-- Name -->
                <RowDefinition Height="Auto"/>
                <!-- Price -->
                <RowDefinition Height="Auto"/>
                <!-- Wholesale -->
                <RowDefinition Height="Auto"/>
                <!-- Stock -->
                <RowDefinition Height="Auto"/>
                <!-- Category -->
                <RowDefinition Height="Auto"/>
                <!-- Supplier -->
            </Grid.RowDefinitions>

            <!-- Barcode -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Barcode:" Margin="0,0,12,6"/>
            <TextBox   Grid.Row="0" Grid.Column="1"
                       Text="{Binding Barcode, UpdateSourceTrigger=PropertyChanged}"
                       PreviewKeyDown="Barcode_PreviewKeyDown"/>

            <!-- Όνομα Προϊόντος -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Όνομα Προϊόντος:" Margin="0,0,12,6"/>
            <TextBox   Grid.Row="1" Grid.Column="1"
                       x:Name="NameTextBox"
                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Τιμή -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Τιμή:" Margin="0,0,12,6"/>
            <TextBox   Grid.Row="2" Grid.Column="1"
                       Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"
                       PreviewTextInput="DecimalValidationTextBox"/>

            <!-- Χονδρική Τιμή -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Χονδρική Τιμή:" Margin="0,0,12,6"/>
            <TextBox   Grid.Row="3" Grid.Column="1"
                       Text="{Binding WholesalePriceText, UpdateSourceTrigger=PropertyChanged}"
                       PreviewTextInput="DecimalValidationTextBox"/>

            <!-- Αρχικό Απόθεμα -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Αρχικό Απόθεμα:" Margin="0,0,12,6"/>
            <TextBox   Grid.Row="4" Grid.Column="1"
                       Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Κατηγορία -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Κατηγορία:" Margin="0,0,12,6"/>
            <ComboBox  Grid.Row="5" Grid.Column="1"
                       ItemsSource="{Binding Categories}"
                       SelectedItem="{Binding SelectedCategory}"
                       DisplayMemberPath="Name"/>

            <!-- Προμηθευτής -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Προμηθευτής:" Margin="0,0,12,6"/>
            <ComboBox  Grid.Row="6" Grid.Column="1"
                       ItemsSource="{Binding Suppliers}"
                       SelectedItem="{Binding SelectedSupplier}"
                       DisplayMemberPath="Name"/>
        </Grid>

        <!-- Κουμπιά -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Προσθήκη Προϊόντος"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveProductCommand}"
                    />
        </StackPanel>
    </Grid>
</Window>
