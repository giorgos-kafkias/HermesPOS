<UserControl x:Class="HermesPOS.Views.QrReceptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">

    <DockPanel LastChildFill="True" Margin="10" >
        <!-- ΠΑΝΩ: QR URL + Εισαγωγή -->
        <!-- ΠΑΝΩ: Προμηθευτής + QR URL + Εισαγωγή -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Προμηθευτής:" VerticalAlignment="Center" Margin="0,0,6,0"/>

            <ComboBox Grid.Column="1"
              ItemsSource="{Binding Suppliers}"
              DisplayMemberPath="Name"
              SelectedValuePath="Id"
              SelectedValue="{Binding SupplierId, Mode=TwoWay}"
              MinWidth="220"/>

            <TextBox Grid.Column="2"
             Margin="12,0,0,0"
             MinWidth="200"
             HorizontalAlignment="Stretch"
             Text="{Binding QrUrl, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Grid.Column="3"
            Content="Εισαγωγή"
            Command="{Binding ImportFromQrCommand}"
            Margin="8,0,0,0"/>
        </Grid>


        <!-- ΚΑΤΩ: κουμπιά -->
        <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button Content="Αποθήκευση"
                Command="{Binding SaveMappingsCommand}"
                Margin="0,0,8,0"/>
            <Button Content="Ολοκλήρωση (Post)"
                Command="{Binding PostReceptionCommand}" />
        </StackPanel>

        <!-- ΚΕΝΤΡΟ: DataGrid (γεμίζει τον χώρο, έχει δικό του scroll) -->
        <DataGrid ItemsSource="{Binding Items}"
              AutoGenerateColumns="False"
              CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SupplierCode" Binding="{Binding SupplierCode}" />
                <DataGridTextColumn Header="Περιγραφή"    Binding="{Binding Description}" />
                <DataGridTextColumn Header="Ποσότητα"     Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Barcode Προϊόντος" Binding="{Binding Barcode}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
