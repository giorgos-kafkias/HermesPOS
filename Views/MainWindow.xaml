<Window x:Class="HermesPOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:HermesPOS.Converters"
        Title="Hermes POS" Height="600" Width="850"
        Background="#E3F2FD">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Modern Light Blue Button Style -->
        <Style x:Key="EnterCommitsTextBox" TargetType="TextBox">
            <EventSetter Event="PreviewKeyDown" Handler="TextBox_EnterCommit"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#42A5F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0BEC5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Total Text Style -->
        <Style x:Key="TotalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0D47A1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Admin Login -->
        <Button Content="Admin Login"
                Width="100" Height="30"
                Click="OpenAdminLogin_Click"
                HorizontalAlignment="Left" Grid.Row="0"/>

        <!-- Title -->
        <TextBlock Text="Hermes POS System" Style="{StaticResource TitleText}" Grid.Row="1"/>

        <!-- Scanner Row -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10">
            <TextBlock Text="Σκανάρετε το Barcode:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtBarcodeScanner"
             Width="200"
             Text="{Binding ScannedBarcode, UpdateSourceTrigger=PropertyChanged}"
             FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding AddProductCommand}" />
                    <KeyBinding Key="Tab"   Command="{Binding AddProductCommand}" />
                </TextBox.InputBindings>
            </TextBox>
            <Button Content="Προσθήκη" Width="100" Command="{Binding AddProductCommand}" Focusable="False"/>
            <Button Content="Καθαρισμός Καλαθιού"
                    Width="160"
                    Command="{Binding EmptyCartCommand}"
                    Focusable="False" IsTabStop="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#C62828"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover: λίγο πιο σκούρο κόκκινο -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A61E1E"/>
                            </Trigger>
                            <!-- Pressed: ακόμα πιο σκούρο -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8B1C1C"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0BEC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- List of Products -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="10" BorderBrush="#BBDEFB" BorderThickness="1">
            <ListView ItemsSource="{Binding CartItems}">
                <!-- Κάνει κάθε γραμμή να απλώνει το περιεχόμενό της -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Όνομα Προϊόντος" Width="250" DisplayMemberBinding="{Binding Product.Name}" />

                        <!-- Editable Τιμή -->
                        <GridViewColumn Header="Τιμή (€)" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding PriceString, UpdateSourceTrigger=PropertyChanged}" Width="80" TextAlignment="Center" Style="{StaticResource EnterCommitsTextBox}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Χονδρική Τιμή -->
                        <GridViewColumn Header="Χονδρική" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding UseWholesalePrice, Mode=TwoWay}"
                                  Visibility="{Binding HasWholesaleOption, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding WholesalePriceDisplay}"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="12"
                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Ποσότητα -->
                        <GridViewColumn Header="Ποσότητα" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="60" TextAlignment="Center" Style="{StaticResource EnterCommitsTextBox}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Σύνολο -->
                        <GridViewColumn Header="Σύνολο (€)" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2}}" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Διαγραφή -->
                        <GridViewColumn Header="Διαγραφή" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌" Width="30" Height="30"
                                            HorizontalAlignment="Center"
                                            Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>


            </ListView>
        </Border>

        <!-- Footer -->
        <DockPanel Grid.Row="4" Margin="0,10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Σύνολο: " FontSize="18" Margin="10,0"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2} €}" Style="{StaticResource TotalText}"/>
            </StackPanel>
            <Button Content="Ολοκλήρωση Συναλλαγής"
                    Width="220" Height="40"
                    Command="{Binding CompleteTransactionCommand}"
                    Focusable="False" IsTabStop="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="6" Background="#43A047">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover: πιο σκούρο πράσινο -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <!-- Pressed: ακόμη πιο σκούρο -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0BEC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DockPanel>
    </Grid>
</Window>
