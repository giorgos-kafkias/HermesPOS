    <Window x:Class="HermesPOS.Views.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Είσοδος Διαχειριστή" Height="200" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Κωδικός Διαχειριστή:" FontSize="14" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" KeyDown="PasswordBox_KeyDown"/>
            <Button Content="Σύνδεση" Width="200" Height="40" Click="AdminLogin_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
