<Window x:Class="HermesPOS.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:HermesPOS.Converters"
        xmlns:views="clr-namespace:HermesPOS.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Πίνακας Διαχειριστή"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">

    <Window.Resources>
        <!-- Modern Light Blue Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#42A5F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0BEC5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Total Text Style -->
        <Style x:Key="TotalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0D47A1"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Πάνω για το κουμπί -->
            <RowDefinition Height="*"/>
            <!-- Κάτω για το υπόλοιπο περιεχόμενο -->
        </Grid.RowDefinitions>
        <!-- 🔹 Κουμπί Admin πάνω δεξιά -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button Content="Αποσύνδεση"
                    Width="75"
                    Height="18"
                    Click="OpenAdminLogin_Click"/>
        </StackPanel>
        <TabControl   Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
            <!-- 🔹 Καρτέλα Διαχείρισης Προϊόντων -->
            <TabItem Header="📦 Προϊόντα">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Αναζήτηση -->
                        <RowDefinition Height="*"/>
                        <!-- Λίστα -->
                        <RowDefinition Height="Auto"/>
                        <!-- Κουμπιά -->
                    </Grid.RowDefinitions>

                    <!-- 🔍 Αναζήτηση -->
                    <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
                        <TextBlock Text="🔍 Αναζήτηση:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="300" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <!-- 🔹 Λίστα Προϊόντων -->
                    <DataGrid x:Name="ProductsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding FilteredProducts}"
                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                  EnableRowVirtualization="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Standard"
                  ScrollViewer.CanContentScroll="True">
                        <!-- 🔽 Προσθέτουμε αυτό το RowStyle -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <!-- Κανονική εμφάνιση -->
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>

                                <Style.Triggers>
                                    <!-- Όταν το προϊόν είναι Inactive -->
                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                        <!-- “σκιερό” look -->
                                        <Setter Property="Opacity" Value="0.55"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="Background" Value="#FFEDEDED"/>
                                        <!-- Προαιρετικά: strike-through τίτλος αν θες πιο έντονο -->
                                        <!-- <Setter Property="TextElement.TextDecorations" Value="Strikethrough"/> -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="📌 Όνομα" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="🔢 Barcode" Binding="{Binding Barcode}" Width="120"/>
                            <DataGridTextColumn Header="💲 Τιμή (€)" Binding="{Binding Price, StringFormat={}{0:0.00}}" Width="80"/>
                            <DataGridTextColumn Header="📦 Χονδρική (€)" Width="110" Binding="{Binding WholesalePrice, StringFormat={}{0:0.00}}" />
                            <DataGridTextColumn Header="📦 Απόθεμα" Binding="{Binding Stock}" Width="100"/>
                            <DataGridTextColumn Header="🗂️ Κατηγορία" Binding="{Binding Category.Name}" Width="120"/>
                            <DataGridTextColumn Header="🏭 Προμηθευτής" Binding="{Binding Supplier.Name}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 🔹 Κουμπιά -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="2">
                        <Button Content="➕ Προσθήκη" Command="{Binding AddProductCommand}" Width="150" Margin="5"/>
                        <Button Content="✏️ Επεξεργασία" Command="{Binding EditProductCommand}" Width="150" Margin="5"/>
                        <!-- Απενεργοποίηση/Ενεργοποίηση -->
                        <Button Command="{Binding ToggleActiveCommand}" Width="150" Margin="5">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="⏸️ Απενεργοποίηση"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                            <Setter Property="Content" Value="▶️ Ενεργοποίηση"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="🗑️ Διαγραφή" Command="{Binding DeleteProductCommand}" Width="150" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <!-- 🔹 Καρτέλα Διαχείρισης Κατηγοριών -->
            <TabItem Header="🗂️ Κατηγορίες">
                <TabItem.Resources>
                    <!-- 🎨 Στυλ μόνο για αυτή την καρτέλα -->
                    <Style x:Key="SquareButtonBase" TargetType="Button">
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="MinWidth" Value="140"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#2E7D32"/>
                        <Setter Property="BorderBrush" Value="#1B5E20"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#256D28"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E5A21"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#1976D2"/>
                        <Setter Property="BorderBrush" Value="#0D47A1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0E57AC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#D32F2F"/>
                        <Setter Property="BorderBrush" Value="#B71C1C"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Resources>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Λίστα Κατηγοριών"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10,10,10,0"/>

                    <DataGrid Grid.Row="1" Margin="10"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  RowHeight="34"
                  AlternatingRowBackground="#FAFAFA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="📌 Κατηγορία" Binding="{Binding Name}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="➕ Προσθήκη"
                    Command="{Binding AddCategoryCommand}"
                    Style="{StaticResource AddButton}"
                    Margin="6,0"/>
                        <Button Content="✏️ Επεξεργασία"
                    Command="{Binding EditCategoryCommand}"
                    Style="{StaticResource EditButton}"
                    Margin="6,0"/>
                        <Button Content="🗑️ Διαγραφή"
                    Command="{Binding DeleteCategoryCommand}"
                    Style="{StaticResource DeleteButton}"
                    Margin="6,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- 🔹 Καρτέλα Διαχείρισης Προμηθευτών -->
            <TabItem Header="🏭 Προμηθευτές">
                <TabItem.Resources>
                    <!-- ίδια στυλ εδώ (ή μπορείς να τα κάνεις λίγο διαφορετικά χρωματικά αν θες) -->
                    <Style x:Key="SquareButtonBase" TargetType="Button">
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="MinWidth" Value="140"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#388E3C"/>
                        <Setter Property="BorderBrush" Value="#2E7D32"/>
                    </Style>

                    <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#1976D2"/>
                        <Setter Property="BorderBrush" Value="#0D47A1"/>
                    </Style>

                    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource SquareButtonBase}">
                        <Setter Property="Background" Value="#D32F2F"/>
                        <Setter Property="BorderBrush" Value="#B71C1C"/>
                    </Style>
                </TabItem.Resources>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Λίστα Προμηθευτών"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10,10,10,0"/>

                    <DataGrid Grid.Row="1" Margin="10"
                  ItemsSource="{Binding Suppliers}"
                  SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  RowHeight="34"
                  AlternatingRowBackground="#FAFAFA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🏭 Προμηθευτής" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="📞 Τηλέφωνο" Binding="{Binding Phone}" Width="160"/>
                            <DataGridTextColumn Header="📍 Διεύθυνση" Binding="{Binding Address}" Width="220"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="➕ Προσθήκη"
                    Command="{Binding AddSupplierCommand}"
                    Style="{StaticResource AddButton}"
                    Margin="6,0"/>
                        <Button Content="✏️ Επεξεργασία"
                    Command="{Binding EditSupplierCommand}"
                    Style="{StaticResource EditButton}"
                    Margin="6,0"/>
                        <Button Content="🗑️ Διαγραφή"
                    Command="{Binding DeleteSupplierCommand}"
                    Style="{StaticResource DeleteButton}"
                    Margin="6,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <TabItem Header="🔥 Bestseller Προϊόντα">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 🔹 Φίλτρα αναζήτησης -->
                    <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" ItemWidth="160">
                        <TextBlock Text="Από: " VerticalAlignment="Center" />
                        <DatePicker SelectedDate="{Binding BestsellerViewModel.FromDate, Mode=TwoWay}" Width="140"/>

                        <TextBlock Text="Έως: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <DatePicker SelectedDate="{Binding BestsellerViewModel.ToDate, Mode=TwoWay}" Width="140"/>

                        <TextBlock Text="Κατηγορία: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox ItemsSource="{Binding BestsellerViewModel.Categories}" 
                          SelectedItem="{Binding BestsellerViewModel.SelectedCategory, Mode=TwoWay}" 
                          DisplayMemberPath="Name" Width="180"/>

                        <TextBlock Text="Προμηθευτής: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox ItemsSource="{Binding BestsellerViewModel.Suppliers}" 
                          SelectedItem="{Binding BestsellerViewModel.SelectedSupplier, Mode=TwoWay}" 
                          DisplayMemberPath="Name" Width="180"/>

                        <TextBlock Text="Top N: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox ItemsSource="{Binding BestsellerViewModel.TopNOptions}" 
                                  SelectedItem="{Binding BestsellerViewModel.TopN, Mode=TwoWay}" 
                                  Width="80"/>

                        <Button Content="Φόρτωση" Command="{Binding BestsellerViewModel.LoadBestsellersCommand}" Width="120" Height="30" Margin="10,0,0,0"/>
                    </WrapPanel>

                    <!-- 🔹 Πίνακας Bestseller Προϊόντων -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding BestsellerViewModel.Bestsellers}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                            <DataGridTextColumn Header="Προϊόν" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Πωλήσεις" Binding="{Binding TotalQuantitySold}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 🔹 Καρτέλα Αναφορά Πωλήσεων -->
            <TabItem Header="📈 Αναφορά Πωλήσεων">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 🔹 Φίλτρα -->
                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <TextBlock Text="Από:" VerticalAlignment="Center" Margin="5"/>
                        <DatePicker SelectedDate="{Binding SalesReportViewModel.FromDate}" Width="120"/>

                        <TextBlock Text="Έως:" VerticalAlignment="Center" Margin="5"/>
                        <DatePicker SelectedDate="{Binding SalesReportViewModel.ToDate}" Width="120"/>

                        <Button Content="Φόρτωση" Command="{Binding SalesReportViewModel.LoadSalesCommand}" Margin="10,0,0,0" Width="100"/>
                    </StackPanel>

                    <!-- 🔹 Πίνακας Αποτελεσμάτων -->
                    <DataGrid Grid.Row="1"
          ItemsSource="{Binding SalesReportViewModel.Sales}"
          SelectedItem="{Binding SalesReportViewModel.SelectedSale, Mode=TwoWay}"
          AutoGenerateColumns="False"
          Margin="10"
          IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🕓 Ημερομηνία" Binding="{Binding SaleDate, StringFormat=dd/MM/yyyy HH:mm}" Width="*" />
                            <DataGridTextColumn Header="📦 Προϊόντα" Binding="{Binding Items.Count}" Width="100" />
                            <DataGridTextColumn Header="💶 Σύνολο" Binding="{Binding TotalAmount, StringFormat=€0.00}" Width="150" />

                            <!-- 🔘 Κουμπιά επεξεργασίας & διαγραφής -->
                            <DataGridTemplateColumn Header="Ενέργειες" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏️" Width="40" Margin="2"
                                ToolTip="Επεξεργασία"
                                Command="{Binding DataContext.SalesReportViewModel.EditSaleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}" />
                                            <Button Content="🗑️" Width="40" Margin="2"
                                ToolTip="Διαγραφή"
                                Command="{Binding DataContext.SalesReportViewModel.DeleteSaleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 🔹 Σύνολο κάτω από τον πίνακα -->
                    <TextBlock Grid.Row="2"
                        Text="{Binding SalesReportViewModel.TotalAmount, StringFormat=Σύνολο: €{0:0.00}}"
                        FontWeight="Bold" FontSize="14"
                        HorizontalAlignment="Right" Margin="10"/>
                </Grid>
            </TabItem>

            <TabItem Header="📉 Χαμηλό Απόθεμα">
                <views:LowStockProductsTab DataContext="{Binding LowStockViewModel}" />
            </TabItem>

            <TabItem Header="📥 Παραλαβή Προϊόντων">
                <views:ReceiveStockTab DataContext="{Binding ReceiveStockViewModel}" />
            </TabItem>
            <TabItem Header="📄 Παραλαβή από QR">
                <views:QrReceptionView DataContext="{Binding QrReceptionViewModel}" Loaded="QrReceptionView_Loaded" />
            </TabItem>



        </TabControl>
    </Grid>

</Window>