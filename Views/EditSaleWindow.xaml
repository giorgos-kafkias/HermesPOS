<Window x:Class="HermesPOS.Views.EditSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Επεξεργασία Πώλησης" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Πίνακας Προϊόντων Πώλησης -->
        <DataGrid ItemsSource="{Binding SaleItems}" AutoGenerateColumns="False" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Προϊόν" Binding="{Binding Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Ποσότητα" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Τιμή (€)" Binding="{Binding Price}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔘 Κουμπιά -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="💾 Αποθήκευση" Width="120" Margin="0,0,10,0" Command="{Binding SaveCommand}"/>
            <Button Content="❌ Άκυρο" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
